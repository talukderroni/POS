@model POSApplication.Models.Secu_User

@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <title>POS Web App</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/LoginContent/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginContent/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginContent/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginContent/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginContent/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginContent/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginContent/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LoginContent/css/main.css">
    <!--===============================================================================================-->
</head>
<body>


    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/LoginContent/images/PosLogo.png" alt="IMG">
                </div>

     @using (Html.BeginForm("Login", "Authentication", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form", @id = "Myform" }))
    {
        @Html.AntiForgeryToken()
                @*<form class="login100-form validate-form">*@
                    <span class="login100-form-title">
                        User Login
                    </span>
                    <div class="alert alert-warning" style="background-color:white;border-color:white">
                        <p id="Error" class="alert-danger">@ViewBag.Message</p>
                    </div>



                    <div class="wrap-input100 validate-input" data-validate="User Name is required!">
                        <input id="UserName" class="input100" type="text" name="UserName" placeholder="UserName">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input id="Password" class="input100" type="password" name="Password" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button id="login" class="login100-form-btn">
                            Login
                        </button>
                    </div>
}

              
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/LoginContent/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/vendor/tilt/tilt.jquery.min.js"></script>
    <script>



		$('.js-tilt').tilt({
			scale: 1.1
		})
		$(document).ready(function () {
		    $("#Error").hide();
		    var val = '@ViewBag.Message';
		    if (val != null) {
		        $("#Error").show();
		    }

		    $("#login").click(function () {

		        if ($("#UserName").val() != '' & $("#Password").val() != '') {


		            $("#Myform").submit();
		        }


		    });
		   
		});

    </script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginContent/js/main.js"></script>

</body>
</html>
